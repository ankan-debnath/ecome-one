<section id="header">
    <a href="#"><img src="/img/logo.png" class="logo" alt="logo"></a>
    <div id="list-container">
        <ul id="navbar">
            <i  class="fa fa-times close-menu" aria-hidden="true"></i>
            <% if (locals.user) { %>
                <li><button class="<%= navSection == 'profile' ? 'active' : '' %>"><%= user.name.split(' ')[0] %></button></li>
            <% } else { %>
                <li><a class="<%= navSection == 'login' ? 'active' : '' %>" href="/login-page">Login</a></li>
            <% } %>
            <li><a href="/" class="<%= navSection == 'home' ? 'active' : '' %>">Home</a></li>
            <li><a href="/shop" class="<%= navSection == 'shop' ? 'active' : '' %>">Shop</a></li>
            <li><a href="/blog.html" class="<%= navSection == 'blog' ? 'active' : '' %>">Blog</a></li>
            <li><a href="/about.html" class="<%= navSection == 'about' ? 'active' : '' %>">About</a></li>
            <li><a href="/contact.html" class="<%= navSection == 'contact' ? 'active' : '' %>">Contact</a></li>
            <li id="bag"><a href="/cart" class="<%= navSection == 'cart' ? 'active' : '' %>"><svg xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000"><g><rect fill="none" height="24" width="24"/><path d="M18 6h-2c0-2.21-1.79-4-4-4S8 3.79 8 6H6c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-6-2c1.1 0 2 .9 2 2h-4c0-1.1.9-2 2-2zm6 16H6V8h2v2c0 .55.45 1 1 1s1-.45 1-1V8h4v2c0 .55.45 1 1 1s1-.45 1-1V8h2v12z"/></g></svg></a></li>
        </ul>
        <div class="profile-menu close" >
            <a href="/profile/personal-info" >Profile</a>
            <% if (locals.isAdmin) { %>
                <a href="/adminPannel" >Admin Pannel</a>
            <% } %>
            <a href="/logout" >Logout</a>
        </div>
    </div>
    <div id="mobile">
        <a href="/cart"> <i id="mob" class="fa fa-shopping-cart" aria-hidden="true"></i></a>
        <button><i id="mob" class="fa fa-bars menu" aria-hidden="true"></i></button>
    </div>
</section>